<odoo>
    <data>

        <record id="product_template_form_view_fleet_extend" model="ir.ui.view">
            <field name="name">product.template.form.view.fleet.extend</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']/span[2]" position="after">
                    <span class="d-inline-block">
                        <field name="fleet_ok"/>
                        <label for="fleet_ok"/>
                    </span>
                </xpath>
            </field>
        </record>

    </data>
</odoo>