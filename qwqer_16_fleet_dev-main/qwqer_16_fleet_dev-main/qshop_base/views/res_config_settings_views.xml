<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_qwqer_shop_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.qwqer.shop</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='invoicing_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="qwqer_shop_conf">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Qwqer Shop Product</span>
                        <div class="text-muted">
                            Qwqer Shop Service Product
                        </div>
                        <div class="text-muted">
                            <field name="qwqer_shop_product_id"/>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Qwqer Shop Credit Journals</span>
                        <div class="text-muted">
                           Journal for create qwqer shop credit journals
                        </div>
                        <div class="text-muted">
                            <field name="qwqer_shop_credit_journal_id"/>
                        </div>
                    </div>

                </div>

            </xpath>
        </field>
    </record>
</odoo>